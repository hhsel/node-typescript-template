{
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2018",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,

        "rootDir": "./src",
        "outDir": "./build",

        "baseUrl": "./src",
        "moduleResolution": "node",
        "paths": {
        }
    },
    "include": [
        "./src",
    ],
    "exclude": [
        "node_modules",
        "./build"
    ]
}
